{
  "name": "@quenty/studio-bridge",
  "version": "0.7.0",
  "description": "WebSocket-based bridge for running Luau scripts in Roblox Studio",
  "type": "module",
  "main": "dist/src/index.js",
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "studio-bridge": "./dist/src/cli/cli.js"
  },
  "dependencies": {
    "@quenty/cli-output-helpers": "workspace:*",
    "@quenty/nevermore-cli-helpers": "workspace:*",
