{
  "name": "nevermore-vscode",
  "version": "0.2.0",
  "description": "Nevermore Snippets for Roblox development in VSCode",
  "displayName": "Nevermore Snippets",
  "license": "MIT",
  "keywords": [
    "Roblox",
    "Nevermore",
    "CLI"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Quenty/Nevermore.git",
    "directory": "tools/nevermore-cli/"
  },
  "publisher": "Quenty",
  "scripts": {
    "build": "vsce package --out ./nevermore-vscode.vsix",
    "build:install": "code --install-extension ./nevermore-vscode.vsix",
    "prebuild:install": "npm run build"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "contributes": {
    "snippets": [
      {
        "language": "lua",
        "path": "./snippets/luau.code-snippets"
      },
      {
        "language": "luau",
        "path": "./snippets/luau.code-snippets"
      }
    ]
  },
  "private": true,
  "devDependencies": {
    "@vscode/vsce": "^3.7.1"
  }
}
