{
	"name": "Nevermore",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": ["--init"],

	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "22",
			"pnpmVersion": "10.27.0"
		}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"quenty.nevermore-vscode",
				"johnnymorganz.luau-lsp",
				"johnnymorganz.stylua",
				"kampfkarren.selene-vscode",
				"esbenp.prettier-vscode",
				"editorconfig.editorconfig"
			],
			"settings": {
				"luau-lsp.server.path": "/home/vscode/.aftman/tool-storage/Quenty/luau-lsp/1.58.0-quenty.1/luau-lsp",
				"luau-lsp.sourcemap.rojoProjectFile": "default.project.json",
				"luau-lsp.ignoreGlobs": ["**/node_modules/**"],
				"luau-lsp.sourcemap.generatorCommand": "npm run build:sourcemap",
				"luau-lsp.sourcemap.useVSCodeWatcher": true,
				"files.exclude": {
					"*.sublime-workspace": true,
					"**/node_modules/**": true,
					"roblox.toml": true
				},
				"[lua]": {
					"editor.defaultFormatter": "JohnnyMorganz.stylua",
					"editor.formatOnSave": true,
					"editor.formatOnSaveMode": "file"
				},
				"[luau]": {
					"editor.defaultFormatter": "JohnnyMorganz.stylua",
					"editor.formatOnSave": true,
					"editor.formatOnSaveMode": "file"
				},
				"[typescript]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode",
					"editor.formatOnSave": true,
					"editor.formatOnSaveMode": "file"
				}
			}
		}
	},

	"forwardPorts": [34872],
	"portsAttributes": {
		"34872": {
			"label": "Rojo",
			"onAutoForward": "silent"
		}
	},
	"otherPortsAttributes": {
		"onAutoForward": "silent"
	},

	"remoteUser": "vscode",
	"postCreateCommand": "bash .devcontainer/post-create-command.sh",
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:/home/vscode/.aftman/bin:/home/vscode/.npm-global/bin"
	}
}

