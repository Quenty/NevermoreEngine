{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@rbxts",
      "node_modules/@quenty"
    ],
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@quenty/*": ["src/*"]
    }
  },
  "types": ["node"]
}